<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lzhiy.anyandroiddemo.performance.fragment_performance.FragmentPerformanceActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
        android:id="@+id/page1" android:text="第一页"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/page2" android:text="第二页"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/page3" android:text="第三页"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
    android:id="@+id/content"></FrameLayout>
</LinearLayout>
